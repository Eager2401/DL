 <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/style.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-success">
        <div class="container">
            @Html.ActionLink("S-Sport", "TrangChu", "SanBong", new { area = "" }, new { @class = "navbar-brand1" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav">
                <li>
                    @Html.ActionLink("Trang chủ", "TrangChu", "SanBong", new { area = "" }, new { @class = "nav-link1" })

                </li>
                <li>@Html.ActionLink("Trang Quản Trị", "NguoiQuanLi", "SanBong", new { area = "" }, new { @class = "nav-link1" })</li>
                <li >@Html.ActionLink("Đăng nhập người dùng", "NguoiThue", "SanBong", new { area = "" }, new { @class = "nav-link1" })</li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
