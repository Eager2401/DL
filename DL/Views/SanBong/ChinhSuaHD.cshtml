@model DL.Models.HoaDon
@{ 
    ViewBag.Tittle = "Chỉnh sửa hóa đơn";
}
<h2>Chỉnh sửa hóa đơn</h2>

<form asp-controller="HoaDon" asp-action="ChinhSuaHoaDon" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Mã hóa đơn</label>
        <input type="text" asp-for="MaHD" readonly class="form-control" />
    </div>

    <div class="form-group">
        <label>Loại sân thuê</label>
        <input type="text" asp-for="loaiSan" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giờ bắt đầu</label>
        <input type="text" asp-for="GioBatDau" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giờ kết thúc</label>
        <input type="text" asp-for="GioKetThuc" class="form-control" />
    </div>

    <div class="form-group">
        <label>Số tiền phải trả</label>
        <input type="text" asp-for="TinhTien" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>
